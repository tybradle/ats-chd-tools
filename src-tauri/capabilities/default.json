{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "ATS CHD Tools default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "dialog:allow-message",
    "dialog:allow-ask",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**",
        "$DESKTOP/**"
      ]
    }
  ]
}
